{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "./src/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
